<% include partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome To iPicture!</h1>
            <p>View our beautiful pictures from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/images/new">Add New Picture</a>
            </p>
        </div>
    </div>
     
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% images.forEach(function(image){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= image.image %>">
                    <div class="caption">
                        <h4><%= image.name %></h4>
                    </div>
                    <p>
                        <a href="/images/<%=image._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
