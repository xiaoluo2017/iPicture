<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= image.name %></h1>
        <div style="width: 30%; margin:25px auto;">
            <!--important-->
            <form action="/images/<%= image._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= image.name %>" name="name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= image.image %>" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= image.description %>" name="description">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/images">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>
